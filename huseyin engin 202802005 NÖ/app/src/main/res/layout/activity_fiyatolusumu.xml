<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/kullanici_girii"
    tools:context=".fiyatolusumu">

    <ImageView
        android:id="@+id/hesaptaki_imageview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="30dp"
        app:layout_constraintBottom_toTopOf="@+id/fiyatolusumu_recyclerview"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/hesaptakipara" />

    <TextView
        android:id="@+id/hesaptakiparamiktari_textview"
        android:layout_width="97dp"
        android:layout_height="40dp"
        android:gravity="center"
        android:text="TextView"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/hesaptaki_imageview"
        app:layout_constraintEnd_toEndOf="@+id/hesaptaki_imageview"
        app:layout_constraintHorizontal_bias="0.9"
        app:layout_constraintStart_toStartOf="@+id/hesaptaki_imageview"
        app:layout_constraintTop_toTopOf="@+id/hesaptaki_imageview"
        app:layout_constraintVertical_bias="0.588" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/fiyatolusumu_recyclerview"
        android:layout_width="405dp"
        android:layout_height="619dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>