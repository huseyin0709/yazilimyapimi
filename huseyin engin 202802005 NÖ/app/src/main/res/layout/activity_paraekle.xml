<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/kullanici_girii"
    tools:context=".paraekle">

    <EditText
        android:id="@+id/paraekle_edittext"
        android:layout_width="265dp"
        android:layout_height="71dp"
        android:layout_marginStart="73dp"
        android:layout_marginTop="242dp"
        android:layout_marginEnd="73dp"
        android:layout_marginBottom="146dp"
        android:background="@drawable/beyazedit"
        android:ems="10"
        android:hint="Fiyat Giriniz"
        android:inputType="textPersonName"
        android:textAlignment="center"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/paraekle_buton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/paraekle_buton"
        android:layout_width="145dp"
        android:layout_height="70dp"
        android:layout_marginBottom="220dp"
        android:background="@drawable/buton"
        android:onClick="paraeklebutonu"
        android:text="EKLE"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/paraekle_edittext" />
</androidx.constraintlayout.widget.ConstraintLayout>